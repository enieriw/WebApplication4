            // Đặt thời gian bắt đầu flash sale (ví dụ 1 tiếng)
            const duration = 60 * 60; // 1 giờ = 3600 giây
            let timeRemaining = duration;

            function updateCountdown() {
                const hours = Math.floor(timeRemaining / 3600);
                const minutes = Math.floor((timeRemaining % 3600) / 60);
                const seconds = timeRemaining % 60;

                // Cập nhật nội dung của đồng hồ đếm ngược
                document.getElementById("countdown").innerText =
                    `FLASH SALE Bắt đầu trong ${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

                // Thêm lại phần tử doimau vào bên trong countdown
                document.getElementById("countdown").innerHTML +=
                    '<span id="doimau" style="float:right">Xem tất cả > </span>';

                // Nếu hết thời gian, dừng đếm ngược và hiển thị thông báo
                if (timeRemaining <= 0) {
                    clearInterval(countdownInterval);
                    document.getElementById("countdown").innerText = "FLASH SALE đã bắt đầu!";
                    document.getElementById("countdown").innerHTML +=
                        '<span id="doimau" style="float:right">Xem tất cả > </span>'; // Thêm lại phần tử doimau
                } else {
                    timeRemaining--;
                }
            }

            // Cập nhật đồng hồ đếm ngược mỗi giây
            const countdownInterval = setInterval(updateCountdown, 1000);
            updateCountdown(); // Gọi hàm lần đầu tiên để hiển thị ngay lập tức
